# Configuração de Ambiente de Desenvolvimento - PriceGuard

# === CONFIGURAÇÕES BÁSICAS ===
NODE_ENV=development
REACT_APP_VERSION=0.1.0

# === AUTENTICAÇÃO ===
# Ativar modo de teste para pular autenticação do Google
REACT_APP_SKIP_AUTH=true
# Comentando o Google Client ID para garantir que não seja usado em desenvolvimento
REACT_APP_GOOGLE_CLIENT_ID=

# === API E WEBSOCKET ===
REACT_APP_API_URL=http://localhost:8080
REACT_APP_WS_URL=ws://localhost:8080/ws/dashboard

# === FEATURES FLAGS ===
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_TRACKING=false
REACT_APP_DEBUG_MODE=true

# === CONFIGURAÇÕES DE DESENVOLVIMENTO ===
GENERATE_SOURCEMAP=true
CHOKIDAR_USEPOLLING=true
